---
import StarIcon from './icons/StarIcon.astro';

type Props = {
  repository: Repository;
};
const { name, url, stars, language, description } = Astro.props.repository;
---

<a href={url} class="rounded-lg border p-4 block my-4 hover:border-indigo-500">
  <h3 class="text-xl font-semibold">{name}</h3>
  <p>{description}</p>
  <div class="flex gap-x-4 mt-2 text-gray-500 text-sm">
    <div class="flex place-items-center">
      <StarIcon/>
      <p>{stars}</p>
    </div>
    <p>{language}</p>
  </div>
</a>
