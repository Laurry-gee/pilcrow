---
type Props = {
	title: string;
	description: string;
};
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/profile.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={Astro.props.description} />
		<title>{Astro.props.title}</title>
	</head>
	<body class="mx-auto max-w-3xl px-4">
		<header class="flex place-content-between place-items-center pt-6 pb-2">
			<a class="block" href="/">
				<img
					src="/profile.png"
					alt="profile picture"
					class="w-10 h-10 bg-zinc-100 rounded-full"
				/></a
			>
			<div class="flex gap-x-4 text-zinc-800">
				<a href="/projects" class="hover:text-indigo-600 hover:underline"
					>Projects</a
				>
				<a href="/blog" class="hover:text-indigo-600 hover:underline">Blog</a>
			</div>
		</header>
		<main class="mt-12 sm:mt-16 mb-24 leading-relaxed">
			<slot />
		</main>
	</body>
</html>
