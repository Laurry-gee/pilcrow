---
import StarIcon from "./icons/StarIcon.astro";

type Props = {
  repository: GithubRepository;
};
const { name, url, stars, language, description } = Astro.props.repository;
---

<div class="py-4">
  <a href={url} class="block w-fit"
    ><h2 class="text-2xl font-semibold hover:text-indigo-500 w-fit">
      {name}
    </h2>
  </a>
  <p>{description}</p>
  <div class="flex gap-x-4 mt-2 text-gray-400 text-sm">
    <div class="flex place-items-center gap-x-0.5">
      <StarIcon />
      <p>{stars}</p>
    </div>
    <p>{language}</p>
  </div>
</div>
